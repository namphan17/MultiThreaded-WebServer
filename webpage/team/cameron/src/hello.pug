doctype html
html(lang="en" ng-app)
  head
    title= "Cam's Network Notes"
    meta(charset="UTF-8")
    
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
    link(rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.7.0/styles/default.min.css")
    script(src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.7.0/highlight.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js")
    script hljs.initHighlightingOnLoad();
    style.
      .center {
        text-align: center;
      }
  body
    .jumbotron
      .container
        h1 Cam's Network Notes
    .container
      .row
        .col-sm-8
          h1.center Graded Exercises
          .row
            .col-xs-3
              button.btn-primary.btn.btn-block(ng-click="post = 'week0'") Week0
            .col-xs-3
              button.btn-primary.btn.btn-block(ng-click="post = 'week1'") Week1
            .col-xs-3
              button.btn-primary.btn.btn-block(disabled) Week2
            .col-xs-3
              button.btn-primary.btn.btn-block(disabled) Week3
        .col-sm-4
          h1.center Notes
          h3 Chapter 3
          .row
            .col-xs-4
              button.btn-primary.btn.btn-block(ng-click="post = '3.1'") 3.1
            .col-xs-4
              button.btn-primary.btn.btn-block(ng-click="post = '3.2'") 3.2
            .col-xs-4
              button.btn-primary.btn.btn-block(ng-click="post = '3.3'") 3.3
      .row
        .col-xs-12
          .post(ng-show="post == 'week0'")
            include:markdown-it(linkify=true, langPrefix="highlight-") _posts/graded-week0.md
          .post(ng-show="post == 'week1'")
            include:markdown-it(linkify=true, langPrefix="highlight-") _posts/graded-week1.md
          .post(ng-show="post == '3.1'")
            include:markdown-it(linkify=true, langPrefix="highlight-") _posts/notes-3.1.md 
          .post(ng-show="post == '3.2'")
            include:markdown-it(linkify=true, langPrefix="highlight-") _posts/notes-3.2.md 
          .post(ng-show="post == '3.3'")
            include:markdown-it(linkify=true, langPrefix="highlight-") _posts/notes-3.3.md
          
            
          
      